{{#if (eq params.length 1)}}
  {{#link-to (at params 0)}}
    {{yield}}
  {{/link-to}}
{{else if (eq params.length 2)}}
  {{#link-to (at params 0) (at params 1)}}
    {{yield}}
  {{/link-to}}
{{else if (eq params.length 3)}}
  {{#link-to (at params 0) (at params 1) (at params 2)}}
    {{yield}}
  {{/link-to}}
{{else if (eq params.length 4)}}
  {{#link-to (at params 0) (at params 1) (at params 2) (at params 3)}}
    {{yield}}
  {{/link-to}}
{{/if}}
