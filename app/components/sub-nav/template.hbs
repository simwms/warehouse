{{#if (contains "back" pages)}}
  {{#link-to (join "." (append basePath collectionName "index")) class=btnClass}}
    {{fa-icon "arrow-left" fixedWith=true}} Back
  {{/link-to}}
{{/if}}

{{#if (contains "index" pages)}}
  {{#link-to (join "." (append basePath collectionName modelName "index")) model class=btnClass}}
    {{fa-icon "info-circle" fixedWith=true}} {{capitalize modelName}} Info
  {{/link-to}}
{{/if}}

{{#if (contains "edit" pages)}}
  {{#link-to (join "." (append basePath collectionName modelName "edit")) model class=btnClass}}
    {{fa-icon "edit" fixedWith=true}} Edit {{capitalize modelName}}
  {{/link-to}}
{{/if}}

{{#if (contains "histories" pages)}}
  {{#link-to (join "." (append basePath collectionName modelName "histories")) model class=btnClass}}
    {{fa-icon "clock-o" fixedWith=true}} {{capitalize modelName}} History
  {{/link-to}}
{{/if}}

{{#if (contains "destroy" pages)}}
  {{#link-to (join "." (append basePath collectionName "index")) class=btnClass invokeAction=(action destroyRecord)}}
    {{fa-icon "bomb"}} Destroy {{capitalize modelName}}
  {{/link-to}}
{{/if}}
{{yield this}}
