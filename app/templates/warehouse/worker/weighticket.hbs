{{#modal-dialog 
  targetAttachment="center"
  close=(action transitionToRoute "warehouse.worker.index") 
  translucentOverlay=true}}
  {{#modal-view as |yields|}}
    {{#yields.header}}
      <h6>Weighticket - {{model.appointment.id}}</h6>
    {{/yields.header}}
    {{#yields.links}}
      <ul class="nav nav-tabs row">
        {{#nav-tab "warehouse.worker.weighticket.index"}}
          Weighticket Info
        {{/nav-tab}}
        {{#nav-tab "warehouse.worker.weighticket.edit"}}
          {{fa-icon "edit"}} Modify Weighticket
        {{/nav-tab}}
        {{#nav-tab "warehouse.worker.appointments.appointment.index" model.appointment}}
          {{fa-icon "calendar"}} Related Appointment
        {{/nav-tab}}
      </ul>
    {{/yields.links}}

    {{outlet}}

    {{#yields.footer}}
      {{modal-footer}}
    {{/yields.footer}}
  {{/modal-view}}
{{/modal-dialog}}

