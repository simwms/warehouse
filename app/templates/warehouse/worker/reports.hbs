{{#modal-dialog 
  targetAttachment="center"
  close=(action transitionToRoute "warehouse.worker.index") 
  translucentOverlay=true}}
  {{#modal-view as |yields|}}
    {{#yields.header}}
      <h6>Reports <small>{{portal-for name="header-subtext"}}</small></h6>
    {{/yields.header}}
    {{#yields.links}}
      <ul class="nav nav-tabs row">
        {{#nav-tab "warehouse.worker.reports.index"}}
          {{fa-icon "bar-chart"}} Previous Reports
        {{/nav-tab}}
        {{#nav-tab "warehouse.worker.reports.new"}}
          {{fa-icon "asterisk"}} New Report
        {{/nav-tab}}
      </ul>
    {{/yields.links}}

    <div class="alert alert-warning">
      {{fa-icon "exclamation-circle"}} Report generation is currently off-line
    </div>
    {{outlet}}

    {{#yields.footer}}
      {{modal-footer paginate=paginate}}
    {{/yields.footer}}
  {{/modal-view}}
{{/modal-dialog}}

