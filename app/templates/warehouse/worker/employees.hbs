{{#modal-dialog 
  targetAttachment="center"
  close=(action transitionToRoute "warehouse.worker.index") 
  translucentOverlay=true}}
  {{#modal-view as |yields|}}
    {{#yields.header}}
      <h6>Warehouse Workers <small>{{portal-for name="header-subtext"}}</small></h6>
    {{/yields.header}}
    {{#yields.links}}
      <ul class="nav nav-tabs row">
        {{#nav-tab "warehouse.worker.employees.index"}}
          {{fa-icon "users"}} Workers
        {{/nav-tab}}
      </ul>
    {{/yields.links}}
    {{#yields.footer}}
      {{modal-footer paginate=paginate}}
    {{/yields.footer}}

    {{outlet}}

  {{/modal-view}}
{{/modal-dialog}}

