{{#modal-dialog 
  targetAttachment="center"
  close=(action transitionToRoute "warehouse.worker.index") 
  translucentOverlay=true}}
  {{#modal-view as |yields|}}
    {{#yields.header}}
      <h6>Inventory <small>{{portal-for name="header-subtext"}}</small></h6>
    {{/yields.header}}
    {{#yields.links}}
      <ul class="nav nav-tabs row">
        {{#nav-tab "warehouse.worker.batches.index"}}
          {{fa-icon "cubes"}} Onsite Loads
        {{/nav-tab}}
        {{#nav-tab "warehouse.worker.cells.index"}}
          {{fa-icon "archive"}} Storage Cells
        {{/nav-tab}}
      </ul>
    {{/yields.links}}

    {{outlet}}

    {{#yields.footer}}
      {{modal-footer paginate=paginate}}
    {{/yields.footer}}
  {{/modal-view}}
{{/modal-dialog}}

