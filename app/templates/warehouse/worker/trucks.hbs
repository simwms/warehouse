{{#modal-dialog 
  targetAttachment="center"
  close=(action transitionToRoute "warehouse.worker.index") 
  translucentOverlay=true}}
  {{#modal-view as |yields|}}
    {{#yields.header}}
      <h6>Trucks <small>{{portal-for name="header-subtext"}}</small></h6>
    {{/yields.header}}
    {{#yields.links}}
      <ul class="nav nav-tabs row">
        {{#nav-tab "warehouse.worker.trucks.index"}}
          {{fa-icon "truck"}} Onsite Trucks
        {{/nav-tab}}
        {{#nav-tab "warehouse.worker.docks.index"}}
          Site Docks
        {{/nav-tab}}
        {{#nav-tab "warehouse.worker.scales.index"}}
          {{fa-icon "balance-scales"}} Site Scales
        {{/nav-tab}}
      </ul>
    {{/yields.links}}

    {{outlet}}

    {{#yields.footer}}
      {{modal-footer paginate=paginate}}
    {{/yields.footer}}
  {{/modal-view}}
{{/modal-dialog}}

